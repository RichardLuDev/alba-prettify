{
	"manifest_version": 2,

	"name": "Alba Prettify",
	"description": "This extension improves Alba's territory printing output.",
	"version": "0.8.2",

	"icons": {
		"16": "res/icon16.png",
		"48": "res/icon48.png",
		"128": "res/icon128.png"
	},

	"permissions": [
		"http://www.baseloc.com/"
	],
	
	"content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
	
	"background": {
		"scripts": [
			"lib/jquery-2.1.1.min.js",
			"src/common.js",
			"src/background.js"
		]
	},

	"content_scripts": [
		{
			"matches": [
				"http://www.baseloc.com/alba/print/*",
				"http://www.baseloc.com/alba/campaign/*"
			],
			"css": [
				"res/print.css"
			],
			"js": [
				"lib/jquery-2.1.1.min.js",
				"src/common.js",
				"src/contentanalytics.js",
				"src/print.js"
			],
			"run_at": "document_end"
		},
		{
			"matches": [
				"http://www.baseloc.com/alba/addresses/*"
			],
			"js": [
				"lib/jquery-2.1.1.min.js",
				"src/common.js"
			],
			"run_at": "document_end"
		}
	]
}