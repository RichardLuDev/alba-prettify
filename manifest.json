{
  "manifest_version": 2,

  "name": "Alba Prettify",
  "description": "This extension improves Alba's territory printing page.",
  "version": "1.0.0",

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "permissions": [
    "declarativeContent",
    "storage",
    "http://www.baseloc.com/"
  ],
  
  "content_security_policy": "script-scripts 'self' https://www.google-analytics.com; object-scripts 'self'",
  
  "web_accessible_resources": [
    "css/print.css"
  ],
  
  "background": {
    "scripts": [
      "scripts/require.js",
      "scripts/background-page.js"
    ]
  },
  
  "page_action": {
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    },
    "default_title": "Alba Prettify Options",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches": [
      "http://www.baseloc.com/alba/print/*"
    ],
    "js": [
      "scripts/require.js",
      "scripts/print-page.js"
    ],
    "run_at": "document_start"
  }, {
    "matches": [
      "http://www.baseloc.com/alba/addresses*"
    ],
    "css": [
      "css/addresses.css"
    ],
    "js": [
      "scripts/require.js",
      "scripts/addresses-page.js"
    ],
    "run_at": "document_end"
  }, {
    "matches": [
      "http://www.baseloc.com/alba/assigned*"
    ],
    "css": [
      "css/assigned.css"
    ],
    "js": [
      "scripts/require.js",
      "scripts/assigned-page.js"
    ]
  }]
}